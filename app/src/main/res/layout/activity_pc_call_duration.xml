<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/AbstractLight"
            android:text="Call Duration"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="39sp" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/chartPieCallDuration"
            android:layout_width="match_parent"
            android:layout_height="599dp"
            android:layout_marginBottom="30dp"
            android:padding="5dp"
            android:paddingBottom="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@android:color/white">

            <!-- Table Heading -->

            <!-- Table Data -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/AbstractLight">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:gravity="center_horizontal"
                    android:padding="10sp"
                    android:text="Call Type"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:gravity="center_horizontal"
                    android:padding="10sp"
                    android:text="Call Duration"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />


            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:background="@color/PrimaryLight"
                    android:gravity="center_horizontal"
                    android:padding="10sp"
                    android:text="Incoming Calls"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvResultICCallDuration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:gravity="center_horizontal"
                    android:padding="10sp"
                    android:text="null"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:background="@color/PrimaryLight"
                    android:gravity="center_horizontal"
                    android:padding="10sp"
                    android:text="Outgoing Calls"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvResultOCCallDuration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:gravity="center_horizontal"
                    android:padding="10sp"
                    android:text="null"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:background="@color/PrimaryLight"
                    android:gravity="center_horizontal"
                    android:padding="10sp"
                    android:text="Missed Calls"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvResultMCCallDuration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:gravity="center_horizontal"
                    android:padding="10sp"
                    android:text="null"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:background="@color/PrimaryLight"
                    android:gravity="center_horizontal"
                    android:padding="10sp"
                    android:text="Total Calls"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvResultTCCallDuration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:gravity="center_horizontal"
                    android:padding="10sp"
                    android:text="null"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </TableRow>

        </TableLayout>
    </LinearLayout>

</ScrollView>